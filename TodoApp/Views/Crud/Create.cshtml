@model Todo

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row p-2">
            <h2 class="text-success">Create ToDo</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <br />
        <div class="mb-3">
            <label asp-for="Description"></label>
            <textarea input asp-for="Description" class="form-control" cols="15" rows="10"></textarea>
        </div>
        <br />
        <div class="mb-3 d-inline-block">
            <label asp-for="CreateDataTime"></label>
            <input type="date" asp-for="CreateDataTime" class="form-control"/>
            <span asp-validation-for="CreateDataTime" class="text-danger"></span>
        </div>
        <br />
        <div class="mb-3 d-inline-block">
            <label asp-for="EndDataTime"></label>
            <input type="date" asp-for="EndDataTime" class="form-control" />
            <span asp-validation-for="EndDataTime" class="text-danger"></span>
        </div>
        <br />
        <div class="mb-3 d-inline-block">
            <label asp-for="Status"></label>
            <select class="form-select" asp-for="Status">
                <option value="0">Not Started</option>
                <option value="1">In Progress</option>
                <option value="2">Completed</option>
            </select>
        </div>
        <br />
        <div class="mb-3 d-inline-block">
            <label asp-for="Hidden" class="mb-1 d-inline-block"></label>
            <br />
            <input class="form-check-input" type="checkbox" asp-for="Hidden" class="form-control" />
        </div>
        <br />
        <br />
        <button type="submit" class="btn btn-success" style="width: 90px">Create</button>
        <a asp-controller="Home" asp-action="index" class="btn btn-secondary" style="width: 90px">Cancel</a>
    </div>
</form>

